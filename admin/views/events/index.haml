.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:events, :index)
      %li=link_to pat(:new), url(:events, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:event)
    .inner
      %table.table
        %tr
          %th.first=mat(:event, :id)
          %th=mat(:event, :name)
          %th=mat(:event, :year)
          %th=mat(:event, :date)
          %th.last="&nbsp;"
        -@events.each do |event|
          %tr
            %td.first=event.id
            %td=event.name
            %td=event.year
            %td=event.date
            %td.last
              =button_to pat(:edit), url(:events, :edit, :id => event.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:events, :destroy, :id => event.id), :method => :delete, :class => :button_to
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")